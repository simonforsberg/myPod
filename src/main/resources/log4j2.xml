<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%t] %c{2} - %m%n"/>
        </Console>
        <JDBC name="Database" tableName="logs">
            <DriverManager connectionString="jdbc:mysql://localhost:3306/myPodDB"
                           driverClassName="com.mysql.cj.jdbc.Driver"
                           username="user"
                           password="pass"/>
            <Column name="log_date_time" isEventTimestamp="true"/>
            <Column name="clazz" pattern="%logger" isUnicode="false"/>
            <Column name="level" pattern="%level" isUnicode="false"/>
            <Column name="log" pattern="%message" isClob="false" isUnicode="false"/>
            <Column name="exception" pattern="%ex{full}" isClob="false" isUnicode="false"/>
        </JDBC>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Database"/>
        </Root>
    </Loggers>
</Configuration>
