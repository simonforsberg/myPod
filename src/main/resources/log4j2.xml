<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.example.logging">
    <Appenders>
        <JDBC name="HibernateDBAppender" tableName="app_logs">
            <ConnectionSource class="org.example.logging.HibernateConnectionSource"/>
            <Column name="level" pattern="%level"/>
            <Column name="message" pattern="%message"/>
            <Column name="error_details" pattern="%throwable"/>
            <Column name="timestamp" isEventTimestamp="true"/>
        </JDBC>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="HibernateDBAppender"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
